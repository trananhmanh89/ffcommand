	<copyright>(C) 2007 Open Source Matters, Inc.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.0.0</version>
	<description></description>
	<files>
		<filename plugin="ffcommand">ffcommand.php</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/plg_system_ffcommand.ini</language>
		<language tag="en-GB">language/en-GB/plg_system_ffcommand.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/plugins/system/ffcommand/fields">
				<field name="devmode" label="Dev Mode" type="devmode" default="0" class="btn-group btn-group-yesno">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
